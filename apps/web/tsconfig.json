{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "dom",
            "dom.iterable",
            "ES2022"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@banker-expert/shared/*": [
                "../../packages/shared/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "noEmit": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}